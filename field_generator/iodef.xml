<?xml version="1.0"?>
<simulation>
 <context id="test">
   <!-- <calendar type="Gregorian" time_origin="2025-01-01" start_date="2025-03-31 18:00:00" /> -->
   <calendar type="Gregorian" time_origin="2025-01-01" start_date="2025-01-01" />

   <grid_definition>
     <grid id="grid_2D">
        <domain id="domain" type="rectilinear" ni_glo="10" nj_glo="10"/>
     </grid>
   </grid_definition>

    <variable_definition>
      <variable id="duration_in_ts">8</variable>
    </variable_definition>

   <field_definition>
     <field id="field_A" name="field2D_oce_to_atm" operation="instant"  grid_ref="grid_2D" build_workflow_graph="true" />
     <field id="field_A2" field_ref="field_A" operation="average" freq_op="2ts" expr="@this"/>
   </field_definition>

   <file_definition>
     <file id="restart" name="restart" output_freq="8ts" type="one_file">
       <field id="field_A3" field_ref="field_A2" name="field2D_oce_to_atm" freq_op="4ts" operation="accumulate"  expr="@this" />
     </file>
   </file_definition>

  </context>

  <context id="xios">
     <variable_definition>
        <variable_group id="parameters" >
          <variable id="print_file" type="bool">true</variable>
        </variable_group>
     </variable_definition>
  </context>

</simulation>
